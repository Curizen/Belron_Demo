      }

      /* ======= ÿßÿÆÿ™Ÿäÿßÿ± ÿßŸÑŸäŸàŸÖ ======= */
      daysGrid.addEventListener("click", (e) => {
        const dayEl = e.target;
        if (!dayEl.classList.contains("cursor-pointer")) return;

        const day = parseInt(dayEl.textContent);
        const month = parseInt(monthSelect.value);
