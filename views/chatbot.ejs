          fetch("/analyze", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              message: userMessage,
              lang: currentLang,
              history: historyForBackend,
            }),
          })
            .then((res) => res.json())
            .then((data) => {
              typingIndicator.classList.add("hidden");
